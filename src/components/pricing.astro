---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
---

<a href=`${plan.linkCompra}` class="group relative block overflow-hidden">

  <img
    src=`${plan.button.linkImg || "/hero2.jpg"}`
    alt="productos"
    class="h-64 w-full object-cover transition duration-500 group-hover:scale-105 sm:h-72"
  />

  <div class="relative border border-gray-100 bg-white p-6">
    <span class=`whitespace-nowrap bg-yellow-400 px-3 py-1.5 text-xs font-medium ${plan.nuevo ? "" : "hidden"}`> Nuevo</span>

    <h3 class="mt-4 text-lg font-medium text-gray-900">{plan.name}</h3>

    <p class="mt-1.5 text-sm text-gray-700">S/. {plan.price}</p>

    <form class="mt-4" action={plan.linkCompra}>
      <button 
        class=`block w-full rounded  p-4 text-sm font-medium transition hover:scale-105 flex gap-1 font-semibold  rounded-lg items-center justify-center ${plan.nuevo ? "bg-black text-white": "bg-yellow-400" } `
      >
        Comprar
      </button>
    </form>
  </div>
</a>


