---
import Container from "@components/container.astro";

import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
//

const menuitems = [
  { title: "Inicio", path: "/" },
  {
    title: "Productos",
    badge: true,
    path: "/pricing",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Mas",
    path: "#",
    children: [
      { title: "Sobre nosotros", path: "/about" },
    ],
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>

      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <img class="w-24" src="/logoBrand.png" alt="" />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>


      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-700 hover:text-black">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-yellow-300 rounded-full">
                          ;)
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
          </ul>


        <div class="lg:hidden flex items-center mt-3 gap-4">
