---
import { Picture } from "astro:assets";
import heroImage from "assets/heroimage.png";
import backHero from "../../public/backHero.png"
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 mb-5 md:block relative">
    <Picture src={backHero} alt="asd"  class="absolute inset-0 z-0"/> 
    <Picture  
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="filter grayscale"
    />
  </div>
  <div>
    <h1
      class="text-4xl lg:text-6xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter">
      Siente la libertad con tu movimientØ.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Ten un estilo autentico y sientete comódo a la hora de vestirte 
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="/"
        target="_blank"
        class="flex gap-1 items-center justify-center hover:bg-white hover:text-yellow-300 hover:border-yellow-300"
        rel="noopener">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 256 256"
          ><path
            fill="currentColor"
            d="m229.66 218.34l-50.07-50.06a88.11 88.11 0 1 0-11.31 11.31l50.06 50.07a8 8 0 0 0 11.32-11.32M40 112a72 72 0 1 1 72 72a72.08 72.08 0 0 1-72-72"
          ></path></svg
        >

        Explorar más
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/"
        class="flex gap-1 items-center justify-center bg-yellow-300"
        target="_blank">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 48 48"
          ><g fill="none"
            ><path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="4"
              d="M37 25v12m-26 0v7h26v-7m-26 0H4V18l6.125-5L17 18l7-8l7 8l6.875-5L44 18v19h-7m-26 0V25"
            ></path><path d="m17 18l7-8l7 8l11-8l-2.5-6H9l-3 6z"></path><path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="4"
              d="M19 10h5m5 0h-5m0 0l-7 8l-11-8l3-6h30.5l2.5 6l-11 8z"
            ></path></g
          ></svg
        >
        Unete a Fremob
      </Link>
    </div>
  </div>
</main>
