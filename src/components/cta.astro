---
import Link from "./ui/link.astro";

const productos = [
  {
    img: "https://static.wixstatic.com/media/a7cdad_1fe6f18ccacb473a9138cb3144ff9c31~mv2.png/v1/fill/w_500,h_500,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/a7cdad_1fe6f18ccacb473a9138cb3144ff9c31~mv2.png",
    title: "Fremob clasic T-Shirt",
    ratin: "3",
    price: "27.00",
  },
  {
    img:"https://static.wixstatic.com/media/a7cdad_89d0c9df1d95421baa6d392d34902f19~mv2.png/v1/fill/w_500,h_500,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/a7cdad_89d0c9df1d95421baa6d392d34902f19~mv2.png",
